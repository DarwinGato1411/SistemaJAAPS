                                </listheader> 
                            
                            
                            </listhead>  
                    
                            <template name="model">                                                            
                                <listitem class="container-fluid ">
                                    <listcell zclass = "mycss-listcell">
                                        <textbox readonly="true"  style="font-size:12px;background:#EBF5FB"
                                                 class="form-control form-control-sm"  value="@bind(each.micRuc)"  />
                                    </listcell>
                                    <listcell zclass = "mycss-listcell">
