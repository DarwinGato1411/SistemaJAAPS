                               lenient="true"  format="dd/MM/yyyy" 
                               constraint="no empty: Ingrese de inicio de la busqueda"/> 
               
                    <label value="Fin: "  />
                    <datebox   value="@bind(vm.fin)" 
                               readonly="true" style="font-weight:bold;" 
                               onCreate="self.value = new Date()"                                                   
                               buttonVisible="true" 
                               lenient="true"  format="dd/MM/yyyy" 
